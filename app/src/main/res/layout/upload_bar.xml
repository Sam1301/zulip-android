<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/upload_bar_image"
        android:layout_gravity="center_vertical"
        android:background="@drawable/default_avatar"
        android:src="@drawable/ic_insert_drive_file_black_24dp"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/upload_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Upload file name"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/upload_bar_progress_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 MB"/>

        <ProgressBar
            android:id="@+id/upload_progress_bar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/upload_bar_cancel"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_clear_white_24dp"
        android:tint="@color/colorAccent"/>
</LinearLayout>